<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.b_gamesentertainment.excusemegenerator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/vault_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/vault_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".MenuActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SettingsActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Category" android:screenOrientation="portrait"></activity>
        <activity android:name=".LaunchActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>